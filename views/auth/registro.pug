extends ../layout/index

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            .max-w-md.mx-auto.my-10 
                each error in errores 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow
                form(action="/auth/registro", method="post").space-y-5
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Tu Nombre
                        input(type="text", name="nombre" id="nombre" class="w-full px-3 py-2 border border-gray-300 rounded-md"  placeholder="Tu nombre" value=usuario? usuario.nombre : '')
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Tu Email
                        input(type="email", name="email" id="email" class="w-full px-3 py-2 border border-gray-300 rounded-md"  placeholder="Tu email" value=usuario? usuario.email : '')

                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Tu Password
                        input(type="password", name="password" id="password" class="w-full px-3 py-2 border border-gray-300 rounded-md"  placeholder="Tu password")
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="repassword") Confirmar Password
                        input(type="password", name="repetir_password" id="repassword" class="w-full px-3 py-2 border border-gray-300 rounded-md"  placeholder="Confirmar password")
                    
                    
                    input(type="submit", value="Crear Cuenta" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer")
                    .flex.items-center.justify-between
                        a(href="/auth/login" class="text-gray-400 text-xs") Login
                        a(href="/auth/recuperar" class="text-gray-400 text-xs") Olvide Mi Password